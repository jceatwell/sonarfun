{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Python App",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/core"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1",
            "django": true
        },
        {
            "name": "Python: Debug Exporter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sonarqube-prometheus-exporter/core/prometheus_exporter.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/sonarqube-prometheus-exporter/dev.env"
        }
    ]
}